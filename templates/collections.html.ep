% layout 'default';

%= include 'filter';

% if (scalar @$collection) {
<h3>Kollektionen</h3>

<ol class="collection">
%   foreach (@$collection) {
  <li><%= link_to $_->{q}, url_with('collection', coll_id => $_->{id})->query([q => $_->{q}]) %> (<%= $_->{samples} %> Belegstelle<% if ($_->{samples} > 1) { %>n<% } %>)</li>
%   }
</ol>
% } else {
  <div id="happy">
    <object type="image/svg+xml" data="<%= stash 'prefix' %>/img/rabbid-happy.svg"></object>
  </div>
% };
